{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "es6",
    "rootDir": "src",
    "outDir": "dist",
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./typings",

    "baseUrl": ".",
    "paths": {
      "@/*?v-bridge": ["src/*.vue3"],
      "@/*": ["src/*"],
      "@vue-bridge/runtime": ["@vue-bridge/runtime/vue3"]
    }
  },
  "include": [
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.js"
  ],
}