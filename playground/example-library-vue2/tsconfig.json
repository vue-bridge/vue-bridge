{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "outDir": "./typings",
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@vue-bridge/runtime": ["@vue-bridge/runtime/vue2"],
      "@/*?v-bridge": ["src/*.vue2"],
      "vue": ["node_modules/vue"]
    }
  },
  "include": [
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.d.ts"
  ]
}