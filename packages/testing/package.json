{
  "name": "@vue-bridge/testing",
  "version": "0.1.2",
  "description": "Wrapper over vue-test-utils to enable tests in cross-version Vue libraries",
  "author": "Thorsten Luenborg",
  "repository": {
    "type": "git",
    "url": "https://github.com/LinusBorg/vue-bridge.git",
    "directory": "packages/testing"
  },
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "package.json",
    "src"
  ],
  "scripts": {
    "build": "tsup-node src/index.ts --format esm,cjs --dts"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@vue/test-utils": "^2.0.0",
    "tsup": "^6.1.3",
    "typescript": "^4.7.4",
    "vue": "^3.2.37"
  },
  "peerDependencies": {
    "@vue/test-utils": "^1.2.1 || ^2.0.0-0",
    "vue": "^2.7.0-0 || ^3.2.*"
  },
  "peerDependenciesMeta": {
    "@vue/test-utils": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  }
}
