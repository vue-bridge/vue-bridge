{
  "name": "@vue-bridge/runtime",
  "version": "0.0.9",
  "private": false,
  "description": "A library achieving partial runtime compat between Vue 2 and Vue 3 components",
  "author": "Thorsten LÃ¼nborg <t.luneborg@googlemail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/LinusBorg/vue-bridge.git",
    "directory": "packages/runtime"
  },
  "license": "MIT",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.es.js",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js",
      "types": "./typings/vue3.dt.s"
    },
    "./vue2": {
      "import": "./dist/index.vue2.es.js",
      "require": "./dist/index.vue2.cjs.js",
      "types": "./typings/vue2.dt.s"
    },
    "./vue3": {
      "import": "./dist/index.vue3.es.js",
      "require": "./dist/index.vue3.cjs.js",
      "types": "./typings/vue3.dt.s"
    },
    "./*": "./*"
  },
  "typings": "typings/vue3.d.ts",
  "files": [
    "bin",
    "dist",
    "src",
    "typings",
    "scripts",
    "README.md"
  ],
  "bin": {
    "vue-bridge-fix": "bin/vue-bridge-fix.js",
    "vue-bridge-switch": "bin/vue-bridge-switch.js"
  },
  "scripts": {
    "build": "pnpm build:v3 && pnpm build:v2",
    "build:v3": "vite build",
    "build:v3:w": "vite build --watch",
    "build:v2": "BUILD_TARGET_V2=1 vite build",
    "build:v2:w": "BUILD_TARGET_V2=1 vite build --watch",
    "build:types": "rollup --config ../../config/rollup.types.config.js",
    "lint": "eslint 'src/**/*.{ts,vue}'",
    "postinstall": "node ./scripts/postinstall.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "tslib": "^2.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^2.0.1",
    "@vue/composition-api": "^1.4.3",
    "typescript": "^4.5.2",
    "vite": "^2.7.9",
    "vue": "^3.2.23",
    "vue-tsc": "^0.30.1"
  },
  "peerDependencies": {
    "@vue/composition-api": "^1.0.0-0",
    "vue": "^2.0.0 || >=3.0.4"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  }
}